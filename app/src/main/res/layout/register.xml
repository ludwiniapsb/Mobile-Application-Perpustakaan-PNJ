        android:layout_marginStart="24dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/bg"
        app:layout_constraintEnd_toEndOf="parent"
